<?xml version="1.0" encoding="utf-8"?>
<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <include layout="@layout/layout_img_big_page_view"
        android:id="@+id/full_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/rl_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">
        <include layout="@layout/common_mypage_view"
            android:id="@+id/my_pullview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.sspacee.common.ui.view.FavoriteImageView
            android:id="@+id/iv_favorite"
            android:layout_width="@dimen/margin_40"
            android:layout_height="@dimen/margin_40"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/margin_25"
            android:layout_marginLeft="@dimen/margin_25"
            android:background="@drawable/ic_menu_favorite_no" />
    </RelativeLayout>
</FrameLayout>