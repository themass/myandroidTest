<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_lauch_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lauch_ads_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_lauch_bottom"
        />
    <LinearLayout
        android:id="@+id/ll_banner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/margin_150"
        android:visibility="gone"
        >
        <RelativeLayout
            android:id="@+id/rl_banner1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:layout_marginBottom="@dimen/margin_40"/>
        <RelativeLayout
            android:id="@+id/rl_banner2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:layout_marginBottom="@dimen/margin_40"/>
        <RelativeLayout
            android:id="@+id/rl_banner3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_70"
            android:layout_marginBottom="@dimen/margin_40"/>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/rl_spread"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <RelativeLayout
        android:id="@+id/skip_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:clickable="true"
        >

        <TextView
            android:id="@+id/tv_shu"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/skip_bg"
            android:gravity="center"
            android:text="@string/skip"
             />
    </RelativeLayout>
</RelativeLayout>