<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_lauch_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/lauch_ads_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/ic_lauch_bottom" />

    <RelativeLayout
        android:id="@+id/lauch_ads"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/lauch_ads_bottom"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/launch_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/lauch_skip_padding"
        android:layout_marginTop="@dimen/lauch_skip_padding"
        android:background="@color/transparent"
        android:scaleType="center"
        android:src="@drawable/skip" />

</RelativeLayout>