<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_5"
    android:paddingLeft="@dimen/margin_15"
    android:paddingRight="@dimen/margin_15"
    android:paddingTop="@dimen/margin_5">

    <LinearLayout
        android:id="@+id/ll_vpn_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btn_vpn"
            style="@style/NotificationVpnStatus"
            android:scaleType="fitCenter"
            android:src="@drawable/remote_vpn_on" />

        <ProgressBar
            android:id="@+id/rb_conning"
            style="@style/NotificationVpnStatus"
            android:indeterminateDrawable="@drawable/vpn_remote_conning"
            android:indeterminateDuration="1800" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:id="@+id/ll_vpn_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="@dimen/vpn_ic_size"
                android:layout_height="@dimen/vpn_ic_size"
                android:src="@drawable/ic_small" />

            <TextView
                android:id="@+id/tv_vpn_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_5"
                android:textColor="@color/base_red"
                android:textSize="@dimen/textsize_12" />

            <TextView
                android:id="@+id/tv_vpn_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/base_black"
                android:textSize="@dimen/textsize_14" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_vpn_content"
            style="@style/NotificationContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/ll_vpn_head"
            android:paddingTop="@dimen/margin_5"
            android:textColor="@color/base_black"
            android:textSize="@dimen/textsize_15" />
    </RelativeLayout>
</RelativeLayout>