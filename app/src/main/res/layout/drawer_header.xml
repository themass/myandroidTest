<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_menu_headview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_context_menu"
        android:clickable="true"
        android:onClick="login">

        <ImageView
            android:id="@+id/iv_avatar"
            android:layout_width="@dimen/global_menu_avatar_size"
            android:layout_height="@dimen/global_menu_avatar_size"
            android:layout_marginBottom="@dimen/margin_8"
            android:layout_marginLeft="@dimen/margin_8"
            android:layout_marginTop="@dimen/margin_8"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_login_default_header" />

        <ImageView
            android:id="@+id/iv_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_8"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_menu_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_5"
            android:text="@string/menu_btn_name_default"
            android:textColor="@color/style_color_primary"
            android:textSize="@dimen/drawer_header_login_tx_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_menu_login"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/drawer_header_margin"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:gravity="right"
            android:text="@string/menu_btn_login"
            android:textSize="@dimen/drawer_header_login_tx_size" />

    </LinearLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#dddddd"
        android:layout_below="@+id/ll_menu_headview"/>
    <LinearLayout
        android:id="@+id/ll_desc"
        android:clickable="true"
        android:onClick="onAbout"
        android:background="@drawable/btn_context_menu"
        android:paddingLeft="@dimen/margin_22"
        android:paddingRight="@dimen/margin_22"
        android:paddingBottom="@dimen/margin_22"
        android:layout_below="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:paddingTop="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_14"
            android:textColor="@color/warning_text"
            android:paddingTop="@dimen/margin_5"
            />
        <TextView
            android:id="@+id/tv_desc2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_12"
            android:textColor="@color/fab_color_pressed"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:background="#dddddd"
        android:layout_below="@+id/ll_desc"/>
</RelativeLayout>