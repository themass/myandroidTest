<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tv_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="@dimen/margin_15"
            android:paddingRight="@dimen/margin_5"
            android:paddingTop="@dimen/margin_5"
            android:text="@string/iwanna_tips"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_22"
            android:textStyle="bold" />

        <com.timeline.vpn.ui.view.MyPullView
            android:id="@+id/my_pullview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/ll_comment"
            android:layout_below="@+id/tv_tips"
            android:background="@color/recyclerview_bg" />

        <RelativeLayout
            android:id="@+id/ll_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="@dimen/margin_10">

            <TextView
                android:id="@+id/send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:gravity="center"
                android:padding="@dimen/margin_10"
                android:paddingLeft="@dimen/margin_25"
                android:text="@string/send"
                android:textColor="@color/gray"
                android:textSize="@dimen/textsize_14"></TextView>

            <EditText
                android:id="@+id/et_comment"
                style="@style/edit"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/send"
                android:background="@drawable/bg_edittext"
                android:gravity="top|left"
                android:hint="@string/iwanna_title"/>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/base_half_transparent"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>
</FrameLayout>