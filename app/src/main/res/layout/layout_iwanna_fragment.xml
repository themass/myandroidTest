<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.sspacee.common.ui.view.MyPullView
        android:id="@+id/my_pullview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_comment"
        android:background="@color/recyclerview_bg" />

    <RelativeLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_25"
            android:text="@string/send"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_14" />

        <EditText
            android:id="@+id/et_comment"
            style="@style/edit"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/send"
            android:background="@drawable/bg_edittext"
            android:gravity="top|left"
            android:hint="@string/iwanna_title" />
    </RelativeLayout>
</RelativeLayout>