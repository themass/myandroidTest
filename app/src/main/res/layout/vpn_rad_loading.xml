<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <FrameLayout
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/margin_10"
        android:id="@+id/fl_bg">
        <RelativeLayout
            android:id="@+id/vpn_but"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true">
            <ImageButton
                android:id="@+id/iv_vpn_state"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@drawable/vpn_state_bg"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/tv_vpn_state_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/vpn_bg_click"
                android:textSize="@dimen/tab_index_vpn_conn"
                android:textStyle="bold" />
        </RelativeLayout>
        <com.king.view.radarview.RadarView
            android:id="@+id/vpn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:visibility="gone"
            />
    </FrameLayout>
    <LinearLayout
        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fl_bg"
        android:orientation="vertical">
    </LinearLayout>
    <TextView
        android:id="@+id/rl_content_em"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_14"
        android:gravity="center"
        android:background="@color/warning_text"
        android:text="@string/is_emulator"
        android:layout_below="@+id/rl_content"
        android:padding="@dimen/margin_8"
        android:orientation="vertical">
    </TextView>
    <TextView
        android:id="@+id/tv_not_chain"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_12"
        android:gravity="center"
        android:background="@color/warning_text"
        android:text="@string/support_Chinese"
        android:layout_below="@+id/rl_content_em"
        android:padding="@dimen/margin_8"
        android:orientation="vertical">
    </TextView>
    <LinearLayout
        android:id="@+id/rl_content_native"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_not_chain"
        android:orientation="vertical">
    </LinearLayout>
    <RelativeLayout
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:id="@+id/rl_gift"
        android:layout_marginLeft="@dimen/margin_10"
        android:layout_toLeftOf="@+id/fl_bg"
        android:layout_alignBottom="@+id/fl_bg"
        android:layout_marginBottom="@dimen/margin_22"
        android:src="@drawable/gift"
        >
    </RelativeLayout>
    <ImageButton
        android:layout_width="@dimen/margin_40"
        android:layout_height="@dimen/margin_40"
        android:id="@+id/rl_points"
        android:visibility="visible"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@+id/fl_bg"
        android:layout_marginBottom="@dimen/margin_22"
        android:src="@drawable/gift"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackground"
        >
    </ImageButton>
</RelativeLayout>
