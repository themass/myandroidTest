<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">

    <tz.co.hosannahighertech.messagekit.messages.MessagesList
        android:id="@+id/messagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/input"
        app:incomingAvatarHeight="40dp"
        app:incomingAvatarWidth="40dp"
        app:incomingBubbleDrawable="@drawable/chat_tv_receive"
        app:incomingDefaultBubbleSelectedColor="@color/brown"
        app:incomingDefaultBubbleColor="@color/white"
        app:incomingTextSize="15sp"
        app:outcomingDefaultBubbleSelectedColor="@color/ivory_dark"
        app:outcomingBubbleDrawable="@drawable/chat_tv_send"
        app:outcomingTimeTextColor="@color/gray_dark_transparent"
        app:outcomingDefaultBubbleColor="@color/green"
        app:outcomingTextSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@+id/input"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/gray"/>

    <tz.co.hosannahighertech.messagekit.messages.MessageInput
        android:id="@+id/input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:attachmentButtonBackground="?attr/selectableItemBackgroundBorderless"
        app:attachmentButtonDefaultIconColor="@color/green"
        app:attachmentButtonDefaultIconPressedColor="@color/green_dark"
        app:attachmentButtonHeight="27dp"
        app:attachmentButtonWidth="27dp"
        app:inputButtonBackground="@drawable/bg_custom_layout_send"
        app:inputButtonDefaultIconColor="@color/white"
        app:inputButtonDefaultIconDisabledColor="@color/white60"
        app:inputHint="@string/hint_enter_a_message"
        app:showAttachmentButton="true"/>

</RelativeLayout>