<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/music_status"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main_dark"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <RelativeLayout
        android:id="@+id/rl_content"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_25"
        android:paddingLeft="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:id="@+id/ll_play_status">


            <ImageView
                android:id="@+id/iv_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_previous" />

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@android:drawable/ic_media_play" />

            <ImageView
                android:id="@+id/iv_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@android:drawable/ic_media_next" />
        </LinearLayout>

        <com.openapi.commons.common.ui.view.MarqueeTextView
            android:id="@+id/tv_play_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/ll_play_status"
            android:layout_marginLeft="@dimen/margin_10"

            android:text="@string/no_select"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textColor="@android:color/black" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_content"
        android:layout_marginBottom="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time"
                android:layout_width="@dimen/margin_40"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/base_white"
                android:visibility="visible"
                tools:text="00:00" />

            <ProgressBar
                android:id="@+id/pb_loading"
                android:layout_width="@dimen/margin_40"
                android:layout_height="@dimen/margin_15"
                android:visibility="gone" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/progress"
            android:layout_width="5dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/inner_padding"
            android:layout_marginRight="@dimen/inner_padding"
            android:layout_weight="1"
            android:progressDrawable="@drawable/sound_seekbar_bg"
            android:thumb="@drawable/iconfont_yuan" />

        <TextView
            android:id="@+id/duration"
            android:layout_width="@dimen/margin_40"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/base_white"
            tools:text="04:30" />

    </LinearLayout>
</RelativeLayout>