<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/margin_15"
    android:paddingBottom="@dimen/margin_15"
   >
    <TextView
        android:id="@+id/tv_index"
        style="@style/list_itme_index"
        android:textColor="@color/index_channel_list_base_black"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/list_itme_date"
        android:textColor="@color/gray"
        android:layout_alignBottom="@+id/tv_name" />

    <ImageView
        android:id="@+id/iv_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_toLeftOf="@+id/tv_date"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/list_itme_name"
        android:layout_toLeftOf="@+id/iv_song"
        android:layout_toRightOf="@+id/tv_index" />
</RelativeLayout>
<RelativeLayout
    android:id="@+id/rv_ads"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_h"
    android:gravity="center"
    android:visibility="gone">
</RelativeLayout>

</LinearLayout>