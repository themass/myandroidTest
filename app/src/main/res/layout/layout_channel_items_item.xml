<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_8"
    android:paddingTop="@dimen/margin_8">

    <TextView
        android:id="@+id/tv_index"
        style="@style/list_itme_index"
        android:layout_alignBottom="@+id/tv_name" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/list_itme_date"
        android:layout_alignBottom="@+id/tv_name" />

    <ImageView
        android:id="@+id/iv_song"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_8"
        android:layout_toLeftOf="@+id/tv_date"
        android:background="@drawable/song_play_icon"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tv_name"
        style="@style/list_itme_name"
        android:layout_toLeftOf="@+id/iv_song"
        android:layout_toRightOf="@+id/tv_index" />
    <RelativeLayout
        android:id="@+id/rv_ads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_index"
        android:visibility="gone">
    </RelativeLayout>

</RelativeLayout>