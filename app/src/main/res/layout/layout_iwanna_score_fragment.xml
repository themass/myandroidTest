<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.qq.ext.view.view.MyPullView
        android:id="@+id/my_pullview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ll_comment"
        android:background="@color/recyclerview_bg" />

    <RelativeLayout
        android:id="@+id/ll_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="@dimen/margin_10">

        <TextView
            android:id="@+id/send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin_10"
            android:paddingLeft="@dimen/margin_25"
            android:text="@string/send"
            android:textColor="@color/gray"
            android:textSize="@dimen/textsize_14" />

        <TextView
            android:id="@+id/tv_rech"
            android:paddingRight="@dimen/margin_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/recharge" />
        <Spinner
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sp_recharge"
            android:layout_toLeftOf="@+id/send"
            />
        <EditText
            android:id="@+id/et_comment"
            style="@style/edit"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/margin_40"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/sp_recharge"
            android:layout_toRightOf="@+id/tv_rech"
            android:background="@drawable/bg_edittext"
            android:hint="@string/feedback_hint" />


    </RelativeLayout>
</RelativeLayout>