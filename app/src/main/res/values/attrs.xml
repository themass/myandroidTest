<resources>

    <declare-styleable name="Fragment">
        <attr name="read_only" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ProgressView">
        <attr name="morph" format="integer" />
    </declare-styleable>
    <declare-styleable name="LetterSpacingTextView">
        <attr name="textSpacing" format="float" />
        <attr name="text" format="string" />
    </declare-styleable>
    <!-- Character View -->
    <declare-styleable name="CharacterView">
        <attr name="character" format="string"/>
        <attr name="characterTextColor" format="color"/>
        <attr name="backgroundRoundAsCircle" format="boolean"/>
        <attr name="backgroundColor" format="color"/>
        <attr name="backgroundRadius" format="dimension"/>
        <attr name="characterPadding" format="dimension"/>
    </declare-styleable>
</resources>
