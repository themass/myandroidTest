<resources>

    <attr format="reference" name="selectableItemBackground"/>
    <style name="ApplicationTheme" parent="@android:style/Theme.Holo" />

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/style_color_primary</item>
        <item name="colorPrimaryDark">@color/style_color_primary_dark</item>
        <item name="colorAccent">@color/style_color_accent</item>
        <item name="colorControlHighlight">@color/fab_color_pressed</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowSoftInputMode">stateHidden</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <!-- 设置 显示在toobar上菜单文字的颜色 -->
        <item name="actionMenuTextColor">@android:color/white</item>

    </style>

    <style name="AppTheme.TransparentActivity">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.TransparentActivity.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--slidingclose-->

    <style name="AppTheme.Slide" parent="@style/AppTheme.TransparentActivity">
        <!--Required-->
        <item name="android:windowAnimationStyle">@style/AppTheme.Slide.Animation</item>
    </style>

    <style name="AppTheme.Slide.Animation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_slide_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_slide_in</item>
        <item name="android:activityCloseExitAnimation">@anim/anim_slide_out</item>
    </style>

    <style name="OverflowMenuStyle" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/style_color_primary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <item name="android:textColor">@color/base_white</item>
        <item name="android:actionMenuTextColor">@color/base_white</item>
        <item name="actionMenuTextAppearance">@style/MenuTextStyle</item>
        <item name="android:actionMenuTextAppearance">@style/MenuTextStyle</item>
    </style>
    <style name="MenuTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:actionMenuTextColor">@color/base_white</item>
        <item name="android:textSize">22sp</item>
    </style>
    <style name="ContextMenuButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_context_menu</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
    </style>

    <style name="AnimationActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_out_to_left</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_in_from_right</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_out_to_left</item>
    </style>

    <style name="edit">
        <item name="android:textSize">@dimen/edit_tx_size</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/new_deep_black</item>
        <item name="android:paddingLeft">@dimen/padding_10</item>
        <item name="android:paddingRight">@dimen/padding_10</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:gravity">center_vertical|left</item>
        <item name="android:drawablePadding">10dip</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:minHeight">@dimen/margin_58</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="edit_login" parent="@style/edit">
        <item name="android:minHeight">@dimen/title_height</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="divider_login">
        <item name="android:layout_height">1dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:contentDescription">@string/app_name</item>
        <item name="android:background">@color/tab_widget_text_color</item>
    </style>

    <style name="btn_blue">
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/new_deep_black</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/btn_blue_normal</item>
        <item name="android:layout_height">@dimen/title_height</item>
    </style>

    <style name="tv_white_small" parent="@style/tv_white_normal">
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>

    <style name="tv_white_normal" parent="@style/tv_content_normal">
        <item name="android:textColor">@color/base_white</item>
    </style>

    <style name="tv_content_normal">
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/new_deep_black</item>
    </style>


    <style name="tv_add_custome_title">
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/base_red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!--style name="roomRatingBar" parent="@style/Widget.MaterialRatingBar.RatingBar">
        <item name="android:progressDrawable">@drawable/room_rating_bar</item>
        <item name="android:minHeight">16dp</item>
        <item name="android:maxHeight">16dp</item>
    </style-->

    <style name="dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowFrame">@null</item><!--边框-->
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowNoTitle">true</item><!--无标题-->
        <item name="android:windowBackground">@color/transparent</item><!--背景透明-->
    </style>
    <style name="mydialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@color/base_bg</item>
        <item name="android:windowIsFloating">true</item><!--是否浮现在activity之上-->
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>

    </style>
    <style name="RatingBarStyle" parent="@android:style/Widget.Holo.RatingBar.Small" />

    <style name="NotificationContent">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="NotificationVpnStatus">
        <item name="android:layout_width">40dip</item>
        <item name="android:layout_height">40dip</item>
        <item name="android:layout_gravity">center|right</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="myTransparent" parent="@style/AppTheme.TransparentActivity">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
        <item name="android:activityOpenEnterAnimation">@null</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@null</item>
    </style>
    <!--  tablayout 自定义样式  -->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabPaddingStart">0dp</item>
        <item name="tabPaddingEnd">0dp</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabSelectedTextColor">?android:textColorPrimary</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="tv_setting">
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/new_deep_black</item>
    </style>

    <style name="ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:minHeight">@dimen/toolbar_minHeight</item>
        <item name="titleMargins">0dp</item>
    </style>

    <style name="list_itme_name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_18</item>
        <item name="android:textColor">@color/channel_list_base_black</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="list_itme_date" parent="list_itme_name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">@dimen/textsize_14</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingRight">@dimen/margin_8</item>
        <item name="android:paddingLeft">@dimen/margin_8</item>
    </style>

    <style name="list_itme_index" parent="list_itme_name">
        <item name="android:layout_width">@dimen/margin_40</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:layout_marginLeft">@dimen/margin_8</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeFullscreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Base application theme. -->
    <style name="MusicAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mp.theme.dark_blue.colorPrimary</item>
        <item name="colorPrimaryDark">@color/mp.theme.dark_blue.colorPrimaryDark</item>
        <item name="colorAccent">@color/mp.theme.dark_blue.colorAccent</item>

        <item name="android:textColorPrimary">@color/mp.theme.dark_blue.textColorPrimary</item>
        <item name="android:textColorSecondary">@color/mp.theme.dark_blue.textColorSecondary</item>

        <item name="android:windowBackground">@color/mp.theme.dark_blue.background</item>

        <item name="colorControlNormal">?attr/colorAccent</item>
        <item name="colorControlActivated">@color/mp.theme.dark_blue.colorControlActivated</item>
        <item name="colorControlHighlight">@color/mp.theme.dark_blue.colorControlHighlight</item>


        <!-- ActionMode -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/MP.Theme.Widget.ActionMode</item>
        <item name="actionModeCloseButtonStyle">@style/MP.Theme.Widget.ActionMode.CloseButton</item>

        <!-- AlertDialog -->
        <item name="alertDialogTheme">@style/MP.Theme.Widget.AlertDialog</item>

        <!-- PopupMenu -->
        <item name="popupMenuStyle">@style/MP.Theme.Widget.PopupMenu</item>
        <item name="textAppearanceLargePopupMenu">@style/MP.Theme.TextAppearance.LargePopupMenu</item>
        <item name="textAppearanceSmallPopupMenu">@style/MP.Theme.TextAppearance.SmallPopupMenu</item>
    </style>

    <style name="MP.Theme" parent="MusicAppTheme"/>


    <!-- Widget -->

    <style name="MP.Theme.Widget"/>

    <!-- Widget - Divider -->

    <style name="MP.Theme.Widget.Divider">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">@color/mp.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Vertical">
        <item name="android:layout_height">@dimen/mp.divider.line</item>
    </style>

    <style name="MP.Theme.Widget.Divider.Line.Horizontal">
        <item name="android:layout_width">@dimen/mp.divider.line</item>
    </style>


    <style name="MP.Theme.Widget.SegmentedControl">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selector_segmented_control_item_text</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/mp.padding.normal</item>
        <item name="android:paddingRight">@dimen/mp.padding.normal</item>
        <item name="android:button">@null</item>
    </style>

    <style name="MP.Theme.Widget.Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/MP.Theme.TextAppearance.Light.Toolbar.Title</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">@color/mp.theme.dark_blue.actionMode.background</item>
        <item name="height">?attr/actionBarSize</item>
        <item name="backgroundSplit">@null</item>
        <item name="titleTextStyle">@style/MP.Theme.TextAppearance.ActionMode.Title</item>
        <item name="android:tint">@color/black</item>
    </style>

    <style name="MP.Theme.Widget.ActionMode.CloseButton" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <item name="android:tint">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.Widget.AlertDialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:background">@color/mp.theme.dark_blue.background</item>
    </style>

    <style name="MP.Theme.Widget.PopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:popupBackground">@color/mp.popupMenu.background</item>
        <item name="android:dropDownHorizontalOffset">-24dp</item>
    </style>

    <style name="MP.Theme.Widget.RecyclerView">
        <item name="android:id">@id/recycler_view</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@color/mp.list.scrollThumb</item>
        <item name="android:scrollbarSize">@dimen/mp.list.scrollbarSize</item>
        <item name="layoutManager">@string/mp.list.layoutManager.linear</item>
    </style>

    <style name="MP.Theme.Widget.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar">
        <item name="android:id">@id/progress_bar</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="MP.Theme.Widget.SegmentedControl.Left">
        <item name="android:background">@drawable/selector_segmented_left</item>
    </style>

    <style name="MP.Theme.Widget.SegmentedControl.Right">
        <item name="android:background">@drawable/selector_segmented_right</item>
    </style>

    <!-- TextAppearance -->

    <style name="MP.Theme.TextAppearance">
        <item name="fontPath">@string/mp.font.roboto.monospace.regular</item>
    </style>

    <style name="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MP.Theme.TextAppearance.Light.Toolbar.Title" parent="MP.Theme.TextAppearance.Toolbar">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorAccent</item>
    </style>

    <style name="MP.Theme.TextAppearance.ActionMode.Title" parent="TextAppearance.AppCompat.Widget.ActionMode.Title">
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.List">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.EndSummary">
        <item name="android:id">@id/text_view_summary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:textSize">@dimen/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/mp.padding.large</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Title">
        <item name="android:textColor">@color/selector_list_title_text</item>
        <item name="android:textSize">@dimen/mp.text.list.title</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Hint">
        <item name="android:textColor">@color/selector_list_hint_text</item>
        <item name="android:textSize">@dimen/mp.text.list.hint</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MP.Theme.TextAppearance.List.Empty">
        <item name="android:id">@id/text_view_empty</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/mp.margin.xlarge</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mp.text.hint</item>
        <item name="android:gravity">center</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MP.Theme.TextAppearance.LargePopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>

    <style name="MP.Theme.TextAppearance.SmallPopupMenu" parent="TextAppearance.AppCompat.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/mp.theme.dark_blue.colorPrimary</item>
    </style>
    </resources>
